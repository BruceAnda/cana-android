<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:gravity="center_horizontal"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="cn.ac.ict.cana.newversion.pagers.ExamPageFragment">

    <ImageView
        android:id="@+id/ivBgHead"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/bg_head" />

    <TextView
        android:id="@+id/start_test"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/ivBgHead"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_start_test_buttonbg"
        android:gravity="center"
        android:text="完整测试"
        android:textColor="@color/material_light_white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvSingleTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/start_test"
        android:layout_below="@id/start_test"
        android:layout_marginTop="10dp"
        android:text="单独测试→"
        android:textColor="@color/material_light_white"
        android:textSize="20sp" />

</RelativeLayout>
