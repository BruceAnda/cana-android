<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/freebie_9"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/freebie_2"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/app_name"
        android:textColor="@color/material_light_white"
        android:textSize="20sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_horizontal_ntb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/material_component_dialogs_padding_around_buttons"
        android:layout_weight="1" />

    <com.gigamole.navigationtabbar.ntb.NavigationTabBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ntb_active_color="@color/freebie_1"
        app:ntb_animation_duration="400"
        app:ntb_badged="false"
        app:ntb_bg_color="@color/freebie_2"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_inactive_color="@color/freebie_6"
        app:ntb_preview_colors="@array/red_wine"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_titled="true" />

</LinearLayout>