<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/freebie_9"
    android:keepScreenOn="true"
    tools:context="cn.ac.ict.cana.newversion.modules.guide.ModelGuideActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="6.手指灵敏,请根据提示分别用左手和右手完成"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_next_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@color/freebie_2"
        android:onClick="next"
        android:text="完成测试"
        android:textColor="@color/material_light_white" />

    <Button
        android:id="@+id/btn_pre_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_next_test"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/freebie_2"
        android:onClick="pre"
        android:text="返回上一项测试"
        android:textColor="@color/material_light_white" />

    <Button
        android:id="@+id/btn_start_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/btn_pre_test"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/freebie_2"
        android:onClick="start"
        android:text="开始检测"
        android:textColor="@color/material_light_white" />
</RelativeLayout>
